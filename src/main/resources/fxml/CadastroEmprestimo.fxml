<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="oi.github.mthsilva98.controller.CadastroEmprestimoController" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Labels and Inputs -->
    <Label text="Usuário:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cmbUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Livro:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cmbLivro" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Data do Empréstimo:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dateEmprestimo" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Data de Devolução:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dateDevolucao" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="1">
        <Button text="Salvar" fx:id="btnSalvar"/>
        <Button text="Atualizar" fx:id="btnAtualizar"/>
        <Button text="Excluir" fx:id="btnExcluir"/>
        <Button text="Devolver" fx:id="btnDevolver"/> <!-- Adicionado o botão Devolver -->
        <Button text="Limpar" fx:id="btnLimpar"/>
    </HBox>
</GridPane>
